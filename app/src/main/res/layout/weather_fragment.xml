<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">


    <AutoCompleteTextView
            android:completionThreshold="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/actvCity"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:hint="@string/city"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btAddCity" android:layout_marginRight="8dp"/>
    <Button
            android:text="@string/add_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btAddCity"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCity" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btGeo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            tools:text="Moscow"
            android:textSize="20sp"
    />
    <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvInfo" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCity" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            tools:text="10"
    />


    <ImageView
            android:contentDescription="@string/icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivIcon"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvInfo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"
    />
    <Button
            android:text="@string/current_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btGeo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/actvCity" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>